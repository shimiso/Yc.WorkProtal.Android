<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuecheng.workportal">

    <!-- 连接网络权限，用于执行云端语音能力 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 读取网络信息状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取当前wifi状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 读取手机信息权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />




    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".module.work.editor.EditorApplicationActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.robot.view.VoiceActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/translucent" />
        <activity
            android:name=".module.robot.OpenH5Activity"
            android:launchMode="singleTop"
            android:theme="@style/ToolBarTheme" />
        <activity
            android:name=".LoginActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.robot.view.JsonActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".module.contacts.view.InformationActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateUnspecified|adjustPan|stateHidden" />
        <activity
            android:name=".module.update.VersionUpdateDialog"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/DialogStyleBottom" />

        <service android:name=".module.robot.service.MusicService" />
        <!-- 安装包下载服务 -->
        <service android:name=".module.update.ApkDownloadService" />

        <!-- 友盟应用统计配置 -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5b99bf178f4a9d03d6000118" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="${UMENG_CHANNEL}" />

        <activity android:name=".module.contacts.view.SelectGroupActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.contacts.view.OrganizationActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.mycenter.view.SettingsActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.mycenter.view.FeedbackActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.mycenter.view.MsgNoticeActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.robot.view.ViewMoreActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.mycenter.view.ModifyPasswordActivity" android:launchMode="singleTop"/>
        <activity android:name=".module.mycenter.view.MyDetailActivity" android:launchMode="singleTop"/>
        <activity android:name=".InvalidateActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/DialogStyleBottom" />

        <!-- 会话页面 -->
        <activity
            android:name="com.yuecheng.workportal.module.conversation.ConversationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.yuecheng.workportal"
                    android:pathPrefix="/conversation/"
                    android:scheme="rong" />
            </intent-filter>
        </activity>

