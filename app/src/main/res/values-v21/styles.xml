<resources>
    <!--Android5.0 21版本以上的兼容性样式-->
    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--ToolbarText的大小和颜色-->
        <item name="android:actionMenuTextAppearance">@style/ToolbarTextAppearance</item>
        <!--ToolbarTitleText的大小和颜色-->
        <item name="android:titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <!--style="?android:attr/borderlessButtonStyle"  以下parent去除按钮按下阴影-->
    <!-- 公共黄色按钮样式 -->
    <style name="comm_btn_style" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>
    <!--透明背景弹出层样式 -->
    <style name="DialogStyleBottom" parent="BaseAppTheme">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- 设置无标题 -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationDialogActivity</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
