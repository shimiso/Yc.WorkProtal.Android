<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/primary_dark">
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_information"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/set_user_head"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_gen"
        android:background="@drawable/list_item_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_head"
            border_color="@color/primary"
            border_width="0.5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_toLeftOf="@+id/right_in_btn"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/right_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_in_btn"/>
    </RelativeLayout>
    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_gen"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="姓名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="17620"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_gen"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="性别"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_gen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="17620"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_work_number"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_gen"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="工号"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_work_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="17620"
            android:textSize="16sp" />
    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_work_number"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="手机"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="150121121121"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_landline"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_phone"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="座机"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_landline_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1312151"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_email"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_landline"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="邮箱"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="123156@qq.com"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_jobs"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_email"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="岗位"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_jobs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="产品经理"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_directory"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_jobs"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/my_directory_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="乐成集团>集团信息与技术中心>开发组"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_deputy"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_directory"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="副岗"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_deputy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="副岗"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/divider_horizontal"/>

    <RelativeLayout
        android:id="@+id/my_mmediate_superior"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/my_deputy"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="直属上级"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/my_mmediate_superior_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="康靖"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
