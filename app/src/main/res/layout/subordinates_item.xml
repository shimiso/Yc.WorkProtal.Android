<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg"
        android:layout_below="@+id/tv_first_alphabet">
        <com.yuecheng.workportal.widget.CircleTextImage
            android:id="@+id/cti"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            app:circle_text_size="18sp"
            app:random_color="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/cti"
            android:gravity="center_vertical"
            android:id="@+id/tv_contact_name"
            android:textColor="#000"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            />
        <ImageView
            android:id="@+id/isboy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_contact_name"
            android:src="@mipmap/girl"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/cti"
            android:layout_below="@+id/tv_contact_name"
            android:id="@+id/tv_contact_department"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="8dp"
            android:textColor="#9f9f9f"
            />
        <ImageView
            android:id="@+id/to_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/contact_xx"/>
    </RelativeLayout>
    <View
        style="@style/divider_horizontal"
        android:layout_below="@+id/username" />
</LinearLayout>
