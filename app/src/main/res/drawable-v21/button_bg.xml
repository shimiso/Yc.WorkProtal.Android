<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_2_3cb5f0_light_blue">

    <item>
        <selector>
            <item android:state_pressed="true"><!-- 按下状态 -->

                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid android:color="@color/color_2_3cb5f0_light_blue" />

                    <corners android:radius="3dp" />

                    <stroke
                        android:width="1dp"
                        android:color="@color/color_2_3cb5f0_light_blue" />

                </shape>
            </item>
            <item android:state_enabled="false"><!-- 禁用状态 -->

                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid android:color="@color/color_5_cccccc" />

                    <corners android:radius="3dp" />

                    <stroke
                        android:width="1dp"
                        android:color="@color/lightgray" />

                </shape>
            </item>
            <item android:state_enabled="true"><!-- 普通状态 -->
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">

                    <solid android:color="@color/color_1_0098e1_dark_blue" />

                    <corners android:radius="3dp" />

                    <stroke
                        android:width="1dp"
                        android:color="@color/color_1_0098e1_dark_blue" />

                </shape>
            </item>

        </selector>


    </item>

</ripple>